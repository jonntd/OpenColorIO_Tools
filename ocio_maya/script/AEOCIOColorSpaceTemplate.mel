global proc dim_output_color(string $nodeName){
    
	//Vars
    //-----------------------------------------
    //-----------------------------------------
    string $node[];
	tokenize $nodeName "." $node;

	//Dim
    //-----------------------------------------
    editorTemplate -dimControl $node[0] "output_color" true;
}

