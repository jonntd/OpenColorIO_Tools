
//AEOCIOColorSpaceTemplate
global proc AEOCIOColorSpaceTemplate( string $nodeName ) { 
    
    //Vars
    //-----------------------------------------
    //-----------------------------------------
    string $node[];
	tokenize $nodeName "." $node;


	



	//Header image
    //-----------------------------------------
    //-----------------------------------------
    
    //create header image
    editorTemplate -callCustom "create_header_image" "update_header_image" "Dummy";


	
	



	//scroll layout
    editorTemplate -beginScrollLayout;

    


    
    
    


    

    //Begin Layout Input Color
    //-----------------------------------------
    //-----------------------------------------
    editorTemplate -beginLayout "Input Color" -collapse 0;

    //input_color
    editorTemplate -addControl "input_color";

    //End Layout Input Color
    editorTemplate -endLayout;
    

   



    //Begin Layout OCIO
    //-----------------------------------------
    //-----------------------------------------
    editorTemplate -beginLayout "OCIO" -collapse 0;

    //verbose
    //editorTemplate -addControl "verbose";

    //Separator
    //editorTemplate -addSeparator;

    
    //env_or_file
    editorTemplate -addControl "env_or_file";
    //config_file_path
    editorTemplate -addControl "config_file_path";

    
    //Separator
    editorTemplate -addSeparator;

    
    //input_colorspace
    editorTemplate -addControl "input_colorspace";
    //output_colorspace
    editorTemplate -addControl "output_colorspace";

    //End Layout Input Color
    editorTemplate -endLayout;





    //Begin Layout Config Info
    //-----------------------------------------
    //-----------------------------------------
    editorTemplate -beginLayout "Config Info" -collapse 0;

    //input_color
    editorTemplate -callCustom "create_config_info" "update_config_info" "config_info";

    //End Layout Input Color
    editorTemplate -endLayout;



    


    //Begin Layout Do not modify
    //-----------------------------------------
    //-----------------------------------------
    editorTemplate -beginLayout "Do not modify" -collapse 0;
    
    //output_color
    editorTemplate -addControl "output_color" "dim_output_color";
    
    //last_env_or_file
    editorTemplate -addControl "last_env_or_file" "dim_last_env_or_file";
    
    //last_config_file_path
    editorTemplate -addControl "last_config_file_path" "dim_last_config_file_path";
    
    //internal_input_colorspace_index
    editorTemplate -addControl "internal_input_colorspace_index" "dim_internal_input_colorspace_index";
    
    //internal_output_colorspace_index
    editorTemplate -addControl "internal_output_colorspace_index" "dim_internal_output_colorspace_index";

    //End Layout Input Color
    editorTemplate -endLayout;
    
    


    //Extra controls for unspecified attributes
    //-----------------------------------------
    //-----------------------------------------
    editorTemplate -addExtraControls; 
    
    //end scroll layout
    editorTemplate -endScrollLayout;






}









